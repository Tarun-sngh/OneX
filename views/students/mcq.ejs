<!-- New div for question and tick box -->
<div class="text-center p-4" ><h2> Time left :<span id="timer"></span></h2></div>
<div class="container mt-3 " >
  
  <div class="row ">
    <div class="col-6 questionOptionClass"  style =" border: 2px black solid; border-radius:5% ; background-color:whitesmoke; color: black; font-size: 120%; ">
      
      <div class="py-2 mx-3 questionNo" >Question number 1 of 10</div>
      
      <div class="py-2 mx-3 question"> </div>
     
        <div class="py-2 mx-3">
          <input type="radio" name="option" class="answer" value ="0" onclick="toggle(this)" data-state="false">
          <label class="mx-3 option1"></label>
        </div>
        <div class="py-2 mx-3">
          <input type="radio" name="option" class="answer" value ="1" onclick="toggle(this)" data-state="false">
          <label class="mx-3 option2"></label>
        </div>
        <div class="py-2 mx-3">
          <input type="radio" name="option" class="answer" value ="2" onclick="toggle(this)" data-state="false">
          <label class="mx-3 option3"></label>
        </div>
        <div class="py-2 mx-3">
          <input type="radio" name="option" class="answer" value ="3" onclick="toggle(this)" data-state="false">
          <label class="mx-3 option4"></label>
        </div>

        <!-- second row -->
      <div class="row ">
        <div class="col-4   p-3" >
            <button class="btn btn-outline-primary previousButton" type="submit" name="action" value="previous">Previous</button>
        </div>
        
        <div class="col-4    p-3" >
            <button class="btn btn-outline-warning nextButton" type="submit" name="action" value="next">Next</button>
        </div>

        <div class="col-4    p-3" >
            <button class="btn btn-outline-success saveAndNextButton " type="submit" name="action" value="saveAndNext">Save and Next</button>
        </div>
      </div>

    </div>

    <!-- second column of first row -->
    <div class="col-6 ">
      <div >
                                                             
        <div class="container">
          <div class="row p-6 d-flex justify-content-center" style =" background-color:aquamarine; font-size: 130%; color: black;">
            Question Status
          </div>
            <div class="row" >

              <%var questions = data.test.questions;%>
              <%var totalQuestion = questions.length;%>
              <%for(var i=0; i <  totalQuestion ; i++){%>
                <div class="col-1  mx-3 my-2" style =" background-color:whitesmoke; color: black; " >
                  <span style="font-size:2vw" onclick="move('<%=i%>')" id="Q<%=i%>"><%=i+1%></span>
                </div>
              <%}%>
              
              

            </div>
        </div>
      </div>
      </div>
      
    </div>
  
  </div>
</div>

    <!-- Optional JavaScript; choose one of the two! -->
    
