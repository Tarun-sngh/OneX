  <body class="main-clas">

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <ul class="navbar-nav " style = "margin-left: auto;">
        <li class="nav-item">
          <button class="btn btn-outline-danger" type="submit"><a class="nav-link" href="/students/generateResult/<%=data._id%>">End Test</a></button>
        </li>
        </ul>
    </div>
  </div>
